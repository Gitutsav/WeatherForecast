<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/screen_margin"
    tools:context=".activities.PermissionsActivity">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/cl_internet_check">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/iv_internet_status"
            android:padding="@dimen/label_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/ic_baseline_cancel_24"
            ></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/label_margin"
            app:layout_constraintTop_toTopOf="@id/iv_internet_status"
            app:layout_constraintBottom_toBottomOf="@id/iv_internet_status"
            android:textSize="@dimen/label_text_size"
            android:textColor="@color/black"
            android:text="Internet connectivity"
            app:layout_constraintStart_toEndOf="@id/iv_internet_status"></TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cl_internet_check"
        android:id="@+id/cl_location_permission">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/iv_location_status"
            android:padding="@dimen/label_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/ic_baseline_cancel_24"
            ></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/label_margin"
            app:layout_constraintTop_toTopOf="@id/iv_location_status"
            app:layout_constraintBottom_toBottomOf="@id/iv_location_status"
            android:textSize="@dimen/label_text_size"
            android:textColor="@color/black"
            android:text="Location Permission"
            app:layout_constraintStart_toEndOf="@id/iv_location_status"></TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/cl_location_permission"
        android:id="@+id/cl_gps">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/iv_gps_status"
            android:padding="@dimen/label_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/ic_baseline_cancel_24"
            ></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/label_margin"
            app:layout_constraintTop_toTopOf="@id/iv_gps_status"
            app:layout_constraintBottom_toBottomOf="@id/iv_gps_status"
            android:textSize="@dimen/label_text_size"
            android:textColor="@color/black"
            android:text="GPS enabled"
            app:layout_constraintStart_toEndOf="@id/iv_gps_status"></TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/proceed_button_text_size"
        android:background="@drawable/function_name_background"
        android:textColor="@color/white"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/design_default_color_primary_dark"
        android:text="Proceed"
        android:paddingTop="@dimen/label_margin"
        android:paddingBottom="@dimen/label_margin"
        android:id="@+id/tv_proceed">
    </TextView>

    <ProgressBar
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/pb_loader"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/tv_proceed"
        app:layout_constraintEnd_toEndOf="@+id/tv_proceed"
        app:layout_constraintTop_toTopOf="@+id/tv_proceed"
        app:layout_constraintBottom_toBottomOf="@+id/tv_proceed"
        ></ProgressBar>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>